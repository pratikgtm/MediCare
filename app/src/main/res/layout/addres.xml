<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/Primary">

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/house" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Choose your location and enjoy"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:text="State"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/user_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/brown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/district_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:visibility="invisible"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:text="District"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/user_district"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/brown" />
        </LinearLayout>

        <Button
            android:id="@+id/OK"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="20"
            android:background="@color/Primary"
            android:text="Show Hospitals"
            android:textColor="@color/white"
            android:drawableRight="@drawable/forward_arrow"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
